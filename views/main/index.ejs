<header>
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <button class="navbar-toggle">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">Sailing with Angular</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a>Home</a></li>
        <li><a>Contact</a></li>
      </ul>
    </div>
  </nav>
</header>
<div class="container" ng-controller="MainCtrl">
  <h1>Chat Room</h1>
  <div class="well well-lg">
    <div class="chat window">
      <div class="display row">
        <div class="text col-md-9">
          <div class="line" ng-repeat="line in data.lines">
            <p>
              <span class="timestamp">{{line.createdAt}} </span>
              <span class="name">{{line.user}}: </span>
              {{line.text}}
            </p>
          </div>
        </div>
        <div class="user list col-md-3">
          <div class="person" ng-repeat="user in data.users">{{user.name}}</div>
        </div>
      </div>
      <div class="input">
        <form name="chatInput" ng-submit="sendLine()">
          <div class="input-group">
            <input type="text" class="form-control" ng-model="chat.text">
            <span class="input-group-btn">
              <button class="btn btn-default">Send</button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/ng-template" id="loginModal.html>
  <form name="loginForm" ng-submit="login($event)">
    <div class="modal-header">
      <h3>Log In</h3>
    </div>
    <div class="modal-body">
      <h4>Select a user name</h4>
      <ul>
        <li ng-repeat="error in errors" class="error">{{error.message}}</li>
      </ul>
      <div class="control-group" ng-class="{error: errors}">
        <label class="control-label" for="userInput">Username</label>
        <div class="controls">
          <input name="user" id="userInput" ng-model="user" ng-pattern="/\w+/" required>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <input type="button" class="btn btn-primary" value="Log In">
    </div>
  </form>
</script>
